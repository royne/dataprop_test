%header.navbar.navbar-expand-lg.navbar-light.bg-dark.mb-3
  .container
    = link_to 'Dataprop', root_path, class: 'navbar-brand text-light'
    .ml-auto
      - if user_signed_in?
        .d-flex
          = button_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger me-2"
          = link_to 'Dashboard', home_path, class: "btn btn-secondary mx-4"
          = link_to 'Crear Propiedad', new_property_path, class: "btn btn-primary"
      - else
        = link_to 'Iniciar Sesión', new_user_session_path, class: "btn btn-outline-primary"
